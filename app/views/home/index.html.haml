/ Navbar
%nav.navbar
  .content-wrapper
    = link_to root_path, class: "logo" do
      .coffee-icon-container
        %img.coffee-icon{ src: "assets/coffee-icon-svgrepo-com.svg", alt: "Coffee cup" }
      %span
        EUREKA
        %br
        CAFFE
    %ul.nav-links
      %li= link_to "HOME", root_path
      %li= link_to "ABOUT", "#"
      %li.has-dropdown
        = link_to "SERVICE", "#"
        %ul.nav-dropdown
          %li= link_to "DASHBOARD", dashboard_path
      %li= link_to "BLOG", "#"
      %li= link_to "CONTACTS", "#"

/ Hero Section
%section.hero
  .background
  .hero-content
    %h1 Ordering food
    .divider
      %span.divider-line
      %span.divider-icon
      %span.divider-line
    %p
      Delicious meals, crafted with care and delivered to your door.
      %br/
      Eureka Caffe - simple, satisfying, and just one order away.

/ Filter Bar
%section.filter-bar
  .content-wrapper.filter-bar-content
    .filter-left
      / Category filter
      #category-dropdown.custom-dropdown
        .dropdown-label Category
        %ul.dropdown-options

      / Sort filter
      #sort-dropdown.custom-dropdown
        .dropdown-label Sorting
        %ul.dropdown-options
          %li{ "data-value" => "default" } Default
          %li{ "data-value" => "asc" } Price: Low to High
          %li{ "data-value" => "desc" } Price: High to Low

      / Vegetarian filter
      #vegetarian-dropdown.custom-dropdown
        .dropdown-label Vegetarian
        %ul.dropdown-options
          %li
            %label.vegetarian-label
              %input{ type: "checkbox", id: "vegetarian-toggle" }
              %span Show Only

    / Price Slider
    .price-range-container
      .price-label Price
      .price-slider-wrapper
        %span.min-price
        .slider-container
          %input#price-range-min{ type: "range", min: "0", max: "100", value: "0" }
          %input#price-range-max{ type: "range", min: "0", max: "100", value: "100" }
          .slider-track
          .slider-range
          .slider-thumb.left
          .slider-thumb.right
        %span.max-price

.content-wrapper
  %section#food-grid.food-grid
