- provide(:title, "Order History")

%section.dashboard-hero
  .background
  .hero-content

.container-fluid.py-4
  .d-flex.justify-content-between.align-items-center.mb-4
    %h1.text-dark Order History
    = link_to "Continue Shopping", root_path, class: "btn btn-primary"

  - if @orders.any?
    .row.g-4
      - @orders.each do |order|
        .col-12
          = render partial: "order_card", locals: { order: order }

  - else
    .text-center.py-5
      .mb-4
        %i.bi.bi-receipt.display-1.text-muted
      %h3.text-muted No orders yet
      %p.text-muted.mb-4 Start shopping to see your order history here.
      = link_to "Browse Menu", root_path, class: "btn btn-primary btn-lg"
