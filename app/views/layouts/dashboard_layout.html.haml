!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "yes", :name => "mobile-web-app-capable"}/
    %title= full_title(yield(:title))
    = csrf_meta_tags
    = csp_meta_tag
    = yield :head
    %link{:href => "/icon.png", :rel => "icon", :type => "image/png"}/
    %link{:href => "/icon.svg", :rel => "icon", :type => "image/svg+xml"}/
    %link{:href => "/icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", :rel => "stylesheet"}
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
  %body.d-flex.flex-column{style: "min-height: 100vh;"}
    = render "shared/navbar"

    = render "shared/flash"

    %main.flex-grow-1
      %section.dashboard-hero
        .background
        .hero-content

      .container.py-4
        .row.mb-4
          .col-12
            .d-flex.justify-content-between.align-items-center
              %h2.mb-0 Dashboard
              .btn-group{role: "group", "aria-label": "Dashboard Navigation"}
                = link_to dashboard_path, class: "btn btn-outline-primary #{'active' if request.path == dashboard_path}" do
                  Overview
                = link_to dashboard_orders_path, class: "btn btn-outline-primary #{'active' if request.path == dashboard_orders_path}" do
                  Orders
                = link_to dashboard_menu_path, class: "btn btn-outline-primary #{'active' if request.path == dashboard_menu_path}" do
                  Menu

        .row
          .col-12
            = yield

    = render "shared/footer"

    %script{ src: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" }
