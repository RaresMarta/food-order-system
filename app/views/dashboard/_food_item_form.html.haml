.dashboard-form
  %h2 Add New Food Item
  = form_with model: food_item || FoodItem.new, url: food_item ? food_item_path(food_item) : food_items_path, local: true, method: (food_item ? :patch : :post), class: "form" do |form|
    .form-group
      = form.label :name, "Name"
      = form.text_field :name, required: true, class: "form-control"
    .form-group
      = form.label :category, "Category"
      = form.select :category, dashboard_category_options, { prompt: "Select category" }, { required: true, class: "form-control" }
    .form-group
      = form.label :price, "Price ($)"
      = form.number_field :price, min: 1, step: 0.5, required: true, class: "form-control"
    .form-group.checkbox-group
      = form.check_box :vegetarian
      = form.label :vegetarian, "Vegetarian"
    .form-group
      = form.label :image, "Image"
      = form.file_field :image, accept: "image/*", class: "form-control"
    .form-buttons
      = form.submit (food_item ? "Update Item" : "Add Item"), class: "btn btn-primary"
      = link_to "Clear Form", dashboard_path, class: "btn btn-secondary"
