- provide(:title, "Dashboard")

%section.dashboard-hero
  .background
  .hero-content

.container.py-4
  .row.mb-4.justify-content-center
    .col-lg-8
      .card.border-0.shadow-sm
        .card-body.text-center.py-5
          %h4.mb-4 Dashboard Overview
          .row.g-4.mb-4
            .col-md-3
              .text-center
                %h3.text-primary= @orders_today
                %p.text-muted Orders Today
            .col-md-3
              .text-center
                %h3.text-success= number_to_currency(@total_revenue_today)
                %p.text-muted Revenue Today
            .col-md-3
              .text-center
                %h3.text-info= @total_orders
                %p.text-muted Total Orders
            .col-md-3
              .text-center
                %h3.text-warning= @total_food_items
                %p.text-muted Menu Items

  .row.g-4.justify-content-center
    - cards.each do |card|
      .col-lg-4
        .card.border-0.shadow-sm.h-100
          .card-body.d-flex.flex-column.justify-content-between.align-items-center.h-100
            %i{ class: card[:icon] }
            %h5.card-title.mt-2.mb-2.text-center= card[:title]
            %p.card-text.text-muted.small.flex-grow-1.text-center= card[:text]
            = link_to card[:btn_path], class: "#{card[:btn_class]} w-100 mt-3" do
              %strong= card[:btn_text]
