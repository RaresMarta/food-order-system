#flash
  .flash-container{ data: { controller: "flash" } }
    - flash.each do |type, message|
      - next if message.blank?
      - bs_type = { notice: "success", alert: "danger", error: "danger" }[type.to_sym] || type
      .alert{ class: "alert alert-#{bs_type} alert-dismissible fade show", role: "alert", data: { flash_target: "alert" } }
        %button.btn-close{ "data-bs-dismiss" => "alert", "aria-label" => "Close" }
        = message
