.card.border-0
  .table-responsive
    %table.table.table-hover.mb-0
      %thead.table-light
        %tr
          - cart_table_headers.each do |header|
            %th.fw-semibold= header
      %tbody
        - cart_items.each do |cart_item|
          %tr
            %td
              .d-flex.justify-content-center.align-items-center.bg-light.rounded{style: "width: 50px; height: 50px;"}
                - if cart_item.food_item.image.attached?
                  = image_tag cart_item.food_item.image, class: "rounded", style: "width: 50px; height: 50px; object-fit: cover;"
                - else
                  %small.text-muted No image
            %td.align-middle= cart_item.food_item.name
            %td.align-middle= cart_item.food_item.category.humanize
            %td.align-middle= number_to_currency(cart_item.food_item.price)
            %td.align-middle
              = form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true, class: "d-flex align-items-center gap-2" do |form|
                = form.number_field :quantity, value: cart_item.quantity, min: 1, class: "form-control form-control-sm", style: "width: 80px;"
                = form.submit "Update", class: "btn btn-sm btn-warning"
            %td.align-middle= number_to_currency(cart_item.food_item.price * cart_item.quantity)
            %td.align-middle
              = link_to "Remove", cart_item_path(cart_item), data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "btn btn-sm btn-danger"
