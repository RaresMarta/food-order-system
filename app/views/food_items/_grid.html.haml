- if food_items.any?
  - food_items.each do |item|
    .food-card
      .image-wrapper
        = image_tag(item.image.attached? ? url_for(item.image) : 'default-food.jpg', alt: item.name)
      .food-name= item.name
      .food-price= number_to_currency(item.price)
      .food-category= item.category.humanize
      .food-actions
        - if logged_in?
          = button_to "Add to Cart", cart_items_path,
            params: { food_item_id: item.id },
            class: "btn btn-primary btn-sm"

        - else
          = link_to "Add to Cart", login_path,
            class: "btn btn-primary btn-sm",
            data: { turbo_frame: "_top" }
- else
  .no-results
    .no-results-content
      %h3 No items found
      %p Try adjusting your filters or search criteria
